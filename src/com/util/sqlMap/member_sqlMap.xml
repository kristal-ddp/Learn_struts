<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap      
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="member">


<!-- 회원가입 -->
<insert id="insert" parameterClass="com.member.MemberForm">
	insert into member(userId,userPwd,userName,userGender,userBirth,userAddr,userEmail,userTel,registration) values
	(#userId#,#userPwd#,#userName#,#userGender#,
	<iterate property="userBirth" conjunction="," open="'" close="'">$userBirth[]$</iterate>,
	<iterate property="userAddr" conjunction="," open="'" close="'">$userAddr[]$</iterate>,	
	#userEmail#,#userTel#,1)
</insert>

<!-- 아이디 찾기 -->
<select id="findId" parameterClass="String" resultClass="com.member.MemberForm">
	select userName,userTel from member
	where userName=#userName# and userTel=#userTel# and registration=1
</select>

<!-- 비밀번호 찾기 -->
<select id="findPwd" parameterClass="String" resultClass="com.member.MemberForm">
	select userId,userTel from member
	where userId=#userId# and userTel=#userTel# and registration=1
</select>

<!-- 모든 데이터 필요시 -->
<select id="readData" parameterClass="String" resultClass="com.member.MemberForm">
	select userId,userPwd,userName,userGender,
	to_char(userBirth,'YYYY-MM-DD') userBirth,userAddr,userEmail,userTel from member
	where userId=#userId# and registration=1
</select>

<!-- 회원정보 수정 -->
<update id="update" parameterClass="com.member.MemberForm">
	update member set userPwd=#userPwd#,userAddr=#userAddr#,userEmail=#userEmail#,userTel=#userTel#
	where userId=#userId# and registration=1
</update>

<!-- 회원탈퇴 -->
<delete id="withdraw" parameterClass="int">
	update member set userPwd=null,userName=null,userGender=null,userBirth=null,
	userAddr=null,userEmail=null,userTel=null,registration=0 where userId=#userId#
</delete>

</sqlMap>